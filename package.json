{
  "name": "pmon",
  "version": "1.0.2",
  "description": "PMon - A sleek, cross-platform performance monitor",
  "main": "main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["performance", "monitor", "system", "cross-platform", "electron"],
  "author": "badde",
  "license": "MIT",
  "type": "commonjs",
"build": {
    "productName": "PMon",
    "appId": "com.badde.pmon",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "renderer/**/*",
      "modules/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
"win": {
      "target": "nsis",
      "icon": "assets/icon.png",
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "System"
    }
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "systeminformation": "^5.27.8"
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1"
  }
}
